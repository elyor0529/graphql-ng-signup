{
  "compileOnSave": false,
  "include": ["./src/**/*"],
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": false,
    "allowUnusedLabels": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "module": "commonjs",
    "baseUrl": "./"
  }
}